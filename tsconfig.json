{
  "compilerOptions": {
    "declaration": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "sourceMap": true,
    "target": "es2020",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "noImplicitOverride": true,
    "moduleResolution": "Node",
    "outDir": "./dist"
  },
  "include": ["src/**/*", "scripts/**/*"]
}